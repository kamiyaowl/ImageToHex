<Window x:Class="ImageToHex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="openFileDialogButton" Content="..." HorizontalAlignment="Right" Margin="0,6,10,0" VerticalAlignment="Top" Width="75" Height="23" Click="openFileDialogButton_Click"/>
        <Button x:Name="convertButton" Content="Convert" Margin="10,34,10,0" VerticalAlignment="Top" Click="convertButton_Click"/>
        <TextBox x:Name="filePath" Height="23" Margin="10,6,90,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="result" Margin="10,58,10,10" TextWrapping="Wrap"/>

    </Grid>
</Window>
